{
// > Disable internet usage
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "git.autofetch": false,
    "json.schemaDownload.enable": false,
    "npm.fetchOnlinePackageInfo": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "vsintellicode.features.apiExamples": "disabled",
    "vsintellicode.features.apiExamplests": "disabled",
    "vsintellicode.features.python.deepLearning": "disabled",
// < Disable internet usage
// > Settings/filetype
    "[cmake]": {
        "files.trimTrailingWhitespace": true
    },
    "[git-commit]": {
        "editor.rulers": [
            50,
            72,
          ]
    },
    "[python]": {
        "files.trimTrailingWhitespace": true
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
// < Settings/filetype
// > vim
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [":q"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": [":nohl"]
        },
        {
            "before": ["g", "V"],
            "after": ["`", "[", "v", "`", "]"]
        },
        {
            "before": ["<C-k>", "<CR>"],
            "commands": ["workbench.action.keepEditor"],
            "silent": true
        },
        {
            "before": ["<C-k>", "m"],
            "commands": ["workbench.action.editor.changeLanguageMode"],
            "silent": true
        },
        {
            "before": ["<leader>", "g"],
            "commands": ["workbench.action.findInFiles"],
            "silent": true
        },
        {
            "before": ["n"],
            "after": ["n", "z", "v"]
        },
        {
            "before": ["N"],
            "after": ["N", "z", "v"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "l", "l", "m"],
            "commands": ["bookmarks.list"]
        },
        {
            "before": ["<leader>", "l", "m"],
            "commands": ["bookmarks.listFromAllFiles"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["editor.action.showHover"],
            "silent": true
        },
        {
            "before": ["]", "d"],
            "commands": ["editor.action.marker.next"],
            "silent": true
        },
        {
            "before": ["[", "d"],
            "commands": ["editor.action.marker.prev"],
            "silent": true
        },
        {
            "before": ["[", "q"],
            "commands": ["search.action.focusPreviousSearchResult"],
            "silent": true
        },
        {
            "before": ["]", "q"],
            "commands": ["search.action.focusNextSearchResult"],
            "silent": true
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "g"],
            "commands": ["workbench.action.findInFiles"]
        },
    ],
    "vim.camelCaseMotion.enable": true,
    "vim.foldfix": true,
    "vim.highlightedyank.enable": true,
    "vim.history": 100,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.replaceWithRegister": true,
    "vim.textwidth": 79,
    "vim.useSystemClipboard": true,
    "vim.vimrc.path": "$HOME/.config/vim/vimrc",
    "vim.visualstar": true,
    "vim.showMarksInGutter": true,
    "vim.targets.enable": true,
    "vim.matchpairs": "(:),{:},[:],<:>",
// < vim
// > neovim
"extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
},
// < neovim
// > open in vim
    "open-in-vim.linux.gnome-terminal.args": "",
    "open-in-vim.openMethod": "linux.gnome-terminal",
// < open in vim
// > tabnine
    "tabnine.experimentalAutoImports": true,
// < tabnine
    "files.associations": {
        "*.md.html": "markdown",
        "*.yaml.in": "yaml",
        "Dockerfile.in": "dockerfile"
    },
    "editor.rulers": [
        80,
        120
    ],
    "workbench.colorCustomizations":
    {
        "editor.lineHighlightBackground": "#172d38",
    },
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolSortOrder": "name",
    "editor.accessibilitySupport": "off",
    "editor.cursorWidth": 3,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "Dejavu sans mono",
    "editor.fontSize": 12,
    "editor.fontLigatures": false,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.bracketPairs": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.showStatusBar": true,
    "editor.wrappingIndent": "deepIndent",
    "explorer.confirmDragAndDrop": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "html.format.endWithNewline": true,
    "javascript.referencesCodeLens.enabled": true,
    "markdown.preview.markEditorSelection": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "python.showStartPage": false,
    "search.searchOnType": false,
    "search.seedWithNearestWord": true,
    "search.showLineNumbers": true,
    "terminal.integrated.scrollback": 20000,
    "timeline.showView": true,
    "typescript.referencesCodeLens.enabled": true,
    "window.title": "${remoteName}${separator}${dirty}${rootName}${separator}${activeEditorLong}",
    "window.zoomLevel": 0,
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.editor.openPositioning": "last",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.quickOpen.preserveInput": true,
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,
    "workbench.view.alwaysShowHeaderActions": true,
    "zenMode.hideLineNumbers": false,
    "search.experimental.searchInOpenEditors": true,
    "workbench.editor.decorations.badges": true,
    "search.seedOnFocus": true,
    "editor.foldingHighlight": false,
    "editor.bracketPairColorization.enabled": true, // replaces bracket pair colorizer addon after v1.60
    "editor.suggest.preview": true,
    "workbench.reduceMotion": "on",
    "explorer.confirmDelete": false,
    "python.linting.flake8Args": [
        "--max-line-length=140"
    ],
    "python.linting.pylintArgs": [
        "--rcfile=.pylintrc"
    ],
    "python.experiments.enabled": false,
    "python.testing.pytestEnabled": true,
    "markdown.validate.enabled": true,
    "debug.toolBarLocation": "docked",
    "workbench.editor.pinnedTabSizing": "shrink",
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "files.enableTrash": false,
    "extensions.supportUntrustedWorkspaces": {
        "asvetliakov.vscode-neovim": {
            "supported": true
        }
    },
    "editor.unicodeHighlight.includeComments": true,
    "typescript.disableAutomaticTypeAcquisition": true,
    "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",
    "editor.experimental.asyncTokenization": true,
    "python.analysis.gotoDefinitionInStringLiteral": true,
    "testing.openTesting": "neverOpen",
    "editor.codeActionWidget.includeNearbyQuickFixes": true,
    "editor.multiDocumentOccurrencesHighlight": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "files.exclude": {
        "**/.venv": true
    },
}
